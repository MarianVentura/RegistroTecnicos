@page "/Tecnico/Details"
@page "Tecnico/Details/{TecnicoId:int}"
@inject TecnicoServices tecnicoServices
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Detalles del Técnico</PageTitle>

@if (Tecnicos != null)
{
    <div class="container">
        <div class="card shadow-header">
            <div class="card-header bg-primary text-white text-center py-2 rounded">
                <h3 class="text-center"><strong>Detalles del técnico</strong></h3>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">

                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li><strong>TecnicoId:</strong> @Tecnicos.TecnicoId</li>
                                <li><strong>Nombre:</strong> @Tecnicos.Nombre</li>
                                <li><strong>SueldoHora:</strong> @Tecnicos.SueldoHora</li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-outline-primary" onclick="Volver"><i class="bi bi-box-arrow-left"></i> Volver</button>
            </div>
        </div>
    </div>
}
else
{
    <p>Técnico no encontrado.</p>
}

@code {
    [Parameter]
    public int TecnicoId { get; set; }
    public Tecnicos? Tecnico { get; set; } = new Tecnicos();

    protected override async Task OnInitializedAsync()
    {
        Tecnico = await tecnicoServices.Buscar(TecnicoId);
    }

    public async Task Volver()
    {
        navigationManager.NavigateTo("Tecnico/Index");
    }
}
