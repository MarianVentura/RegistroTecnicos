@page "/Trabajos/Index"
@inject TrabajosServices trabajosServices
@inject TecnicoServices tecnicosServices
@inject ClientesServices clientesServices
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Trabajos</PageTitle>

<div class="border shadow-lg p-3 rounded">
    <div class="card-header bg-primary text-white text-center py-2 square">
        <h3 style="font-weight: bold;" class="mb-0 font-weight-bold">Trabajos</h3>
    </div>

    @*Filtros*@
    <div class="row mb-3 align-items-end">
        <div class="col-md-3">
            <label for="Filtro" class="form-label"></label>
            <select @bind="filtro" class="form-label form-select">
                <option value="" disabled selected>Filtrar por:</option>
                <option value="trabajoId">TrabajoID</option>
                <option value="nombreCliente">Cliente</option>
                <option value="nombreTecnico">Técnico</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="ValorFiltro" class="form-label"></label>
            <div class="input-group">
                <input @bind="valorFiltro" class="form-control" placeholder="Buscar" />
                <button @onclick="Buscar" class="btn btn-outline-secondary" type="button">
                    <span class="bi bi-search"></span>
                </button>
            </div>
        </div>
    </div>

    @*Botón Crear*@
    <div class="card-body">
        <div class="row">
            <div class="col-md-9"></div>
            <div class="col-md-3 text-end">
                <a href="/Trabajos/Create" class="btn btn-success" type="button">
                    <i class="bi bi-pencil-square"></i> Crear
                </a>
            </div>
        </div>
    </div>

    @*Lista de Trabajos*@
    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead class="bg-primary text-white">
                <tr>
                    <th>TrabajoId</th>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Técnico</th>
                    <th>Descripción</th>
                    <th>Monto</th>
                    <th>Tiempo</th>
                    <th>Ver</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                    <th>Enviar WhatsApp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trabajo in ListaTrabajos)
                {
                    <tr>
                        <td>@trabajo.TrabajoId</td>
                        <td>@trabajo.Fecha.ToShortDateString()</td>
                        <td>@trabajo.Cliente?.Nombres ?? "Desconocido"</td>
                        <td>@trabajo.Tecnico?.Nombres ?? "Desconocido"</td>
                        <td>@trabajo.Descripcion</td>
                        <td>@trabajo.Monto.ToString("C")</td>
                        <td>@trabajo.Tiempo.ToString() + " hrs"</td>
                        <td>
                            <a class="btn btn-outline-primary" href="/Trabajos/Details/@trabajo.TrabajoId">
                                <span class="bi bi-eye-fill"></span>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-outline-success" href="/Trabajos/Edit/@trabajo.TrabajoId">
                                <span class="bi bi-pencil-square"></span>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-outline-danger" href="/Trabajos/Delete/@trabajo.TrabajoId">
                                <span class="bi bi-trash"></span>
                            </a>
                        </td>
                        <td>
                            @if (trabajo.Cliente != null && !string.IsNullOrWhiteSpace(trabajo.Cliente.WhatsApp))
                            {
                                <button class="btn btn-outline-info" @onclick="() => EnviarWhatsApp(trabajo)">
                                    <span class="bi bi-whatsapp"></span> Enviar
                                </button>
                            }
                            else
                            {
                                <span>No disponible</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer text-start">
        <p style="font-weight: bold;">Total de Trabajos: @ListaTrabajos.Count</p>
    </div>
</div>

@code {
    public List<Trabajos> ListaTrabajos { get; set; } = new List<Trabajos>();
    private string filtro = "trabajoId";
    private string? valorFiltro;

    protected override async Task OnInitializedAsync()
    {
        await CargarTrabajos();
    }

    private async Task CargarTrabajos()
    {
      
        ListaTrabajos = await trabajosServices.Listar(t => true);
    }

    private async Task Buscar()
    {
        if (!string.IsNullOrWhiteSpace(valorFiltro))
        {
            if (filtro == "trabajoId" && int.TryParse(valorFiltro, out int trabajoId))
            {
                ListaTrabajos = await trabajosServices.Listar(t => t.TrabajoId == trabajoId);
            }
            else if (filtro == "nombreCliente")
            {
                ListaTrabajos = await trabajosServices.Listar(t => t.Cliente != null && t.Cliente.Nombres.Contains(valorFiltro, StringComparison.OrdinalIgnoreCase));
            }
            else if (filtro == "nombreTecnico")
            {
                ListaTrabajos = await trabajosServices.Listar(t => t.Tecnico != null && t.Tecnico.Nombres.Contains(valorFiltro, StringComparison.OrdinalIgnoreCase));
            }
        }
        else
        {
            await CargarTrabajos();
        }
    }

    private void EnviarWhatsApp(Trabajos trabajo)
    {
        if (trabajo.Cliente != null && !string.IsNullOrWhiteSpace(trabajo.Cliente.WhatsApp))
        {
            trabajosServices.EnviarMensajeWhatsApp(trabajo);
        }
    }
}
